<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mainback"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bank Information"
                android:layout_gravity="bottom"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/tv_bank_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Bank Name"
                android:inputType="text"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textSize="15dp"
                android:background="@color/wallet_color"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/tv_bank_country"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Country"
                android:inputType="text"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textSize="15dp"
                android:background="@color/wallet_color"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/tv_bank_currency"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Currency"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textSize="15dp"
                android:inputType="text"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/wallet_color"
                />

            <EditText
                android:id="@+id/tv_bank_routnumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Routing Number"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textSize="15dp"
                android:background="@color/wallet_color"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:inputType="number"
                />
            <EditText
                android:id="@+id/tv_bank_accnumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Account Number"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textSize="15dp"
                android:background="@color/wallet_color"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                />



            <TextView
                android:id="@+id/tv_back_ok"
                android:text="SEND"
                android:textColor="#000000"
                android:textSize="17dp"
                android:gravity="center"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_info_shape"/>
        </LinearLayout>

    </LinearLayout>




</LinearLayout>